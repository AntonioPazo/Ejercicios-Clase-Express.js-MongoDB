<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokémon</title>
</head>
<body>
    <h1>Lista de Pokémon</h1>
    <a href="/pokemon/nuevo">Añadir Pokémon</a>
    <ul>
        <% pokemones.forEach(pokemon => { %>
            <li>
                <strong><%= pokemon.nombre %></strong> - <%= pokemon.tipo %>
                <a href="/pokemon/editar/<%= pokemon.id %>">Editar</a>
                <form action="/pokemon/eliminar/<%= pokemon.id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit">Eliminar</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
